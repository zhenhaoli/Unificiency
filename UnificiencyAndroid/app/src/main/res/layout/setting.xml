<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_cart_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/text_mein_Profil"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:drawablePadding="10.0dip"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:layout_marginLeft="10dp"
            android:text="Mein Profil:"
            android:textSize="16.0sp" />

        <ImageView
            android:id="@+id/image_mein_Profil"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_toRightOf="@id/text_mein_Profil"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:id="@+id/nickname_change"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_mein_Profil"
            android:drawablePadding="10.0dip"
            android:includeFontPadding="false"
            android:paddingLeft="17.0dip"
            android:text="Nickname ändern:"
            android:textAllCaps="false"
            android:textColor="#ff333333"
            android:textSize="16.0sp" />

        <EditText
            android:id="@+id/text_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nickname_change"
            android:drawablePadding="10.0dip"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingLeft="17.0dip"
            android:editable="false"
            android:text="ostdong"
            android:textSize="16.0sp" />


        <Button
            android:id="@+id/major_change"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_nickname"
            android:drawablePadding="10.0dip"
            android:includeFontPadding="false"
            android:paddingLeft="17.0dip"
            android:text="Studiengang ändern:"
            android:textAllCaps="false"
            android:textSize="16.0sp" />

        <EditText
            android:id="@+id/text_major"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/major_change"
            android:drawablePadding="10.0dip"
            android:gravity="center_vertical"
            android:editable="false"
            android:includeFontPadding="false"
            android:paddingLeft="17.0dip"
            android:text="informatik"
            android:textSize="16.0sp" />

        <Button
            android:id="@+id/groups_management"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_major"
            android:drawablePadding="10.0dip"
            android:includeFontPadding="false"
            android:paddingLeft="17.0dip"
            android:text="Lerngruppenveranstaltung"
            android:textAllCaps="false"
            android:textSize="16.0sp" />

        <Button
            android:id="@+id/notes_management"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/groups_management"
            android:drawablePadding="10.0dip"
            android:includeFontPadding="false"
            android:paddingLeft="17.0dip"
            android:text="Notizenverwaltung"
            android:textAllCaps="false"
            android:textSize="16.0sp" />

        <Button
            android:id="@+id/exit_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:drawablePadding="10.0dip"
            android:includeFontPadding="false"
            android:paddingLeft="17.0dip"
            android:text="Abmeldung"
            android:textAllCaps="false"
            android:textSize="16.0sp" />

        <Button
            android:id="@+id/save_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/exit_setting"
            android:drawablePadding="10.0dip"
            android:includeFontPadding="false"
            android:paddingLeft="17.0dip"
            android:text="Speichern"
            android:textAllCaps="false"
            android:textSize="16.0sp" />

    </RelativeLayout>

</RelativeLayout>
