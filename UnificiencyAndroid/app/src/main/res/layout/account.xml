<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_cart_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_account"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        />

    <TextView
        android:id="@+id/name_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_account"
        android:layout_centerHorizontal="true"
        android:drawablePadding="10.0dip"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:layout_marginLeft="10dp"
        android:text="Jindong"
        android:textSize="16.0sp" />

    <TextView
        android:id="@+id/email_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_account"
        android:layout_centerHorizontal="true"
        android:drawablePadding="10.0dip"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:layout_marginLeft="10dp"
        android:text="ostdong@gmail.com"
        android:textSize="16.0sp" />

    <TextView
        android:id="@+id/major_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_account"
        android:layout_centerHorizontal="true"
        android:drawablePadding="10.0dip"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:layout_marginLeft="10dp"
        android:text="Informatik"
        android:textSize="16.0sp" />

    <ImageView
        android:id="@+id/img_stars"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_below="@id/major_account"
        android:layout_marginLeft="120dp"
        android:src="@drawable/a17str"
        />

    <TextView
        android:id="@+id/stars_nummber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_stars"
        android:layout_below="@id/major_account"
        android:drawablePadding="10.0dip"
        android:includeFontPadding="false"
        android:layout_marginLeft="10dp"
        android:text="18"
        android:textSize="16.0sp" />

    <ImageView
        android:id="@+id/img_notes"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_below="@id/major_account"
        android:layout_toRightOf="@id/stars_nummber"
        android:src="@drawable/notes"
        />

    <TextView
        android:id="@+id/notes_nummber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_notes"
        android:layout_below="@id/major_account"
        android:drawablePadding="10.0dip"
        android:includeFontPadding="false"
        android:layout_marginLeft="10dp"
        android:text="7"
        android:textSize="16.0sp" />

    <TextView
        android:id="@+id/group_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_stars"
        android:drawablePadding="10.0dip"
        android:includeFontPadding="false"
        android:layout_marginLeft="10dp"
        android:text="Meine Gruppen:"
        android:textSize="20sp" />


</RelativeLayout>
