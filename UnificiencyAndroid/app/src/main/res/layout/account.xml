<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/empty_cart_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/roundImageView_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <lmu.de.unificiencyandroid.components.settings.RoundImageView
        android:id="@+id/roundImageView"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/msp"
        android:layout_margin="20dp"
        />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/roundImageView_bg"
        android:padding="10dp">

    <ImageView
        android:id="@+id/img_account"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="70dp"
        android:src="@drawable/user"
        />

    <TextView
        android:id="@+id/name_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/img_account"
        android:layout_marginLeft="10dp"
        android:textSize="16.0sp" />

    <ImageView
        android:id="@+id/img_account_email"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/img_account"
        android:layout_marginLeft="80dp"
        android:src="@drawable/email" />

    <TextView
        android:id="@+id/email_account"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_account"
        android:layout_toRightOf="@id/img_account_email"
        android:layout_marginLeft="20dp"
        android:textSize="16.0sp" />

    <ImageView
        android:id="@+id/img_account_major"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="80dp"
        android:layout_below="@id/img_account_email"
        android:src="@drawable/major"
        />

    <TextView
        android:id="@+id/major_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/img_account_email"
        android:layout_toRightOf="@id/img_account_major"
        android:layout_marginLeft="20dp"
        android:textSize="16.0sp" />

    <ImageView
        android:id="@+id/img_stars"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/major_account"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="70dp"
        android:src="@drawable/stars"
        />

    <TextView
        android:id="@+id/stars_nummber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/major_account"
        android:layout_toRightOf="@id/img_stars"
        android:drawablePadding="10.0dip"
        android:includeFontPadding="false"
        android:layout_marginLeft="10dp"
        android:textSize="16.0sp" />


    <ImageView
        android:id="@+id/img_notes"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/major_account"
        android:layout_toRightOf="@id/stars_nummber"
        android:src="@drawable/note"
        />

    <TextView
        android:id="@+id/notes_nummber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/major_account"
        android:layout_toRightOf="@id/img_notes"
        android:drawablePadding="10.0dip"
        android:includeFontPadding="false"
        android:layout_marginLeft="10dp"
        android:textSize="16.0sp" />

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/edit_floating_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_edit"
        android:clickable="true"
        />
